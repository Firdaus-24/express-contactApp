<div class="container">
    <div class="row">
        <div class="col-md-8 mt-3">
            <h3>Detail Contact</h3>
            <% if (!contact) {%>
            <div class="alert alert-danger fw-bold" role="alert">
                Data tidak terdaftar <br><a href="/contact" class="alert-link fw-normal">&laquo; Kembali ke daftar
                    contact</a>
            </div>
            <% } else { %>
            <div class="card" style="width: 18rem;">
                <div class="card-body">
                    <h5 class="card-title"><%= contact.nama %> </h5>
                    <h6 class="card-subtitle mb-2 text-muted"><%= contact.nohp %> </h6>
                    <p class="card-text"><%= contact.email %> </p>
                    <a href="/contact" class="btn btn-danger">&laquo; ubah</a>
                    <a href="/contact" class="btn btn-danger">&laquo; ubah</a>
                    <a href="/contact" class="d-block mt-3">&laquo; kembali</a>
                </div>
            </div>
            <% } %>
        </div>
    </div>
</div>